<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edson.teachercallroll">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeacherCallRoll"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.StudentsInSheetModifyActivity"></activity>
        <activity android:name=".ui.TeacherSingupActivity" />
        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.ReadQrCodeActivity" />
        <activity android:name=".ui.GenerateQrCodeActivity" />
        <activity android:name=".ui.StudentsInSheetActivity" />
        <activity android:name=".ui.SelectGroupActivity" />
        <activity android:name=".ui.AssistanceListActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>